{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Override settings for Jest tests */
    "target": "es2020",
    "module": "commonjs",                     /* Jest works better with CommonJS */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,                     /* No need for .d.ts files in tests */
    "noUnusedLocals": false,                  /* Allow unused variables in tests */
    "noUnusedParameters": false,              /* Allow unused parameters in tests */
    "noImplicitReturns": false,               /* More lenient for test code */
    "sourceMap": true,                        /* Enable source maps for debugging */
    "types": ["jest", "node"],                 /* Include Jest and Node type definitions */
    "paths": {
      "@epicurrents/core": ["tests/mocks/epicurrents-core/index.ts"],
      "@epicurrents/core/*": ["tests/mocks/epicurrents-core/*"],
      "scoped-event-log": ["tests/mocks/scoped-event-log.ts"],
      "#*": ["src/*"],
      "#types": ["tests/mocks/epicurrents-core/dist/types.ts"]
    }
    ,
    "noImplicitAny": false
  },
  "include": [
    "./tests/**/*",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
